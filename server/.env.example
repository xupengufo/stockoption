# 服务器端环境变量配置示例

# 基础配置
NODE_ENV=development
PORT=3001

# Yahoo Finance API配置（免费，但有限制）
# 无需API密钥，但可能被限流

# Polygon API配置（可选，需要付费）
POLYGON_API_KEY=your_polygon_api_key_here

# 富途OpenAPI配置（推荐用于真实期权数据）
FUTU_HOST=localhost                    # 富途牛牛客户端IP地址
FUTU_PORT=11111                       # 富途OpenAPI端口，默认11111
FUTU_API_KEY=                         # API密钥（部分功能需要）

# 数据源优先级配置
PRIMARY_DATA_SOURCE=futu              # 主要数据源：futu, yahoo, simulation
ENABLE_DATA_SOURCE_FALLBACK=true      # 启用数据源回退机制

# 缓存配置
CACHE_TTL=300                         # 缓存时间（秒），默认5分钟
ENABLE_CACHE=true                     # 启用缓存

# 日志配置
LOG_LEVEL=info                        # 日志级别：error, warn, info, debug
ENABLE_API_LOGGING=true               # 启用API调用日志